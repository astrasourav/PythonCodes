


print('')
print("This a program that will create password/passphrase for you.")


#Creating a gap
print('')


#Taking and storing the data from user
a = int(input("Enter your password/passphrase length:- "))


#Creating a variable which include characters in the form of string
alph = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRTSUVWXYZ1234567890!@#$%^&*()_+"


#Createing a empty variable to store data generate/password generated by the program
password = ''


#Now creating the condition for creating/generating the password
for i in range(a):
    password += random.choice(alph)


#Now printing the solution
print(password)
